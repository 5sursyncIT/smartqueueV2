# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=smartqueue_backend.settings.dev

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/smartqueue
DATABASE_REPLICA_URL=  # Optionnel: réplica en lecture seule

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS & CSRF
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Security (Production)
SECURE_SSL_REDIRECT=False  # True en production
SESSION_COOKIE_SECURE=False  # True en production
CSRF_COOKIE_SECURE=False  # True en production

# Twilio (SMS & WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# SendGrid (Email)
SENDGRID_API_KEY=your_sendgrid_api_key
DEFAULT_FROM_EMAIL=noreply@smartqueue.app

# Firebase (Push Notifications)
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json
FCM_SERVER_KEY=your_fcm_server_key

# Google OAuth 2.0
GOOGLE_OAUTH_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your_client_secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Microsoft OAuth 2.0 (Azure AD)
MICROSOFT_OAUTH_CLIENT_ID=your_microsoft_app_id
MICROSOFT_OAUTH_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_OAUTH_TENANT_ID=common  # ou votre tenant_id spécifique
MICROSOFT_OAUTH_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback

# Celery (Optionnel - utilise REDIS_URL par défaut)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
