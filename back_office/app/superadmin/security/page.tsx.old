    const variants = {
      open: { label: 'Ouvert', className: 'bg-yellow-100 text-yellow-800', icon: Clock },
      investigating: { label: 'Enquête', className: 'bg-blue-100 text-blue-800', icon: Eye },
      resolved: { label: 'Résolu', className: 'bg-green-100 text-green-800', icon: CheckCircle },
    };
    const { label, className, icon: Icon } = variants[status];
    return (
      <Badge variant="secondary" className={className}>
        <Icon className="h-3 w-3 mr-1" />
        {label}
      </Badge>
    );
  };

