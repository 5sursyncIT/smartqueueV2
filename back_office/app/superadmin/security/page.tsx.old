  severity: 'low' | 'medium' | 'high' | 'critical';
  user_email: string;
  ip_address: string;
  user_agent: string;
  organization: string;
  timestamp: string;
  details: string;
  status: 'resolved' | 'investigating' | 'open';
}

interface AuditLog {
  id: string;
  action: string;
  user: string;
  resource: string;
  organization: string;
  timestamp: string;
  changes: string;
  ip_address: string;
}

